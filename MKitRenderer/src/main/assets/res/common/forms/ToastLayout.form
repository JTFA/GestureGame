    layout = LAYOUT_ABSOLUTE
    size = 800, 50

    ${font} = res/common/fonts/NanumGothic-48.gpb
    ${fontSize} = 24
    ${textColor} = #ffffffff
    ${textAlignment} = ALIGN_VCENTER_HCENTER

    label msgLabel
    {
        font = ${font}
